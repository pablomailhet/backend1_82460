<main id="main" class="container mt-3">
    <section class="mt-3 d-flex justify-content-between align-items-center">
        <h2>{{title}}</h2>
        <a href="/" class="btn btn-success">View Products</a>
    </section>
    <section class="mt-3 mb-5">
        {{#each products}}
        <div id="p_{{this.id}}" class="row flex-row justify-content-center p-1 carritoRow">
            <div class="col d-flex align-items-center justify-content-start">
                <img src="{{this.thumbnails}}" class="imgCarrito">
                <span class="carritoTexto">{{this.title}}</span>
            </div>
            <div class="col d-flex align-items-center justify-content-end">
                <input type="number" class="carritoTexto carritoInput" min="1" value="{{this.quantity}}"
                    onchange="changeQuantity('{{this.id}}',this.value)" />
            </div>
            <div class="col-3 d-flex align-items-center justify-content-end">
                <span class="carritoTexto">${{formatDecimal this.subtotal}}</span>
            </div>
            <div class="col-1 d-flex align-items-center justify-content-center">
                <button class="btn btn-secondary carritoBtnQuitar"
                    onclick="removeProductFromCart('{{this.id}}');">X</button>
            </div>
        </div>
        {{/each}}
        {{#if products.length}}
        <div class="row flex-row justify-content-center p-1 carritoRow carritoRowTotal">
            <div class="col d-flex align-items-center justify-content-start">
                <span class="carritoTexto carritoTextoBold">Cart Total</span>
            </div>
            <div class="col-3 d-flex align-items-center justify-content-end">
                <span class="carritoTexto carritoTextoBold">${{formatDecimal total}}</span>
            </div>
            <div class="col-1 d-flex align-items-center justify-content-center">
                <button class="align-items-center justify-content-center btn btn-secondary carritoBtnQuitar"
                    onclick="emptyCart();">X</button>
            </div>
        </div>
        {{else}}
        <div class="alert alert-success">
            The cart is empty, <a href="/" class="btn-link">go to products</a>
        </div>
        {{/if}}
    </section>
    <script src="/js/carts.js"></script>
</main>